<?xml version="1.0" encoding="UTF-8" ?>

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">


    <!-- Balise racine -->

    <xs:element name="SubmitCard" type="SubmitCard" />

    <!-- Dï¿½claration des types -->

    <xsd:complexType name="SubmitCard">

        <xsd:sequence>
            <xsd:element name="Destination" type="Destination" />
            <xsd:element name="Devices" type="Devices" />
            <xsd:element name="Parameters" type="Parameters" />
            <xsd:element name="ExtraArgs" type="ExtraArgs" />
        </xsd:sequence>

    </xsd:complexType>

    <xsd:complexType name="Destination">
    
        <xsd:simpleType name="type" final="restriction" >
            <xs:restriction base="xs:string">
                <xsd:enumeration value="Queue"/>
                <xsd:enumeration value="Worflow"/> 
            </xs:restriction>
        </xsd:simpleType>

        <xsd:attribute name="type" type="type" ></xsd:attribute>

        <xsd:attribute name="name" type="xsd:string" ></xsd:attribute>

    </xsd:complexType>


    <xsd:complexType name="Devices">
    
        <xsd:sequence>
            <xsd:element name="Device" type="Device" minOccurs="2" maxOccurs="unbounded"/>
        </xsd:sequence>

    </xsd:complexType>


    <xsd:complexType name="Device">
    
        <xsd:attribute name="name" type="xsd:string"></xsd:attribute>
        <xsd:attribute name="label" type="xsd:string"></xsd:attribute>

    </xsd:complexType>


    <xsd:complexType name="Parameters">

        <xsd:sequence>
            <xsd:element name="Parameter" type="Parameter" />
            <xsd:element name="ParametersGroup" type="ParametersGroup" minOccurs="1" maxOccurs="unbounded"/>
        </xsd:sequence>

    </xsd:complexType>

    <xsd:complexType name="ParametersGroup">

            <xsd:sequence>
                <xsd:element name="Parameter" type="Parameter" minOccurs="1" maxOccurs="unbounded"/>
            </xsd:sequence>

            <xsd:attribute name="label" type="xsd:string"></xsd:attribute>

    </xsd:complexType>


    <xsd:complexType name="Parameter">

            <xsd:simpleType name="visibility" final="restriction" >
                <xs:restriction base="xs:string">
                    <xsd:enumeration value="modifiable"/>
                    <xsd:enumeration value="show"/>
                    <xsd:enumeration value="hidden"/> 
                </xs:restriction>
            </xsd:simpleType>

            <xsd:simpleType name="type" final="restriction" >
                <xs:restriction base="xs:string">
                    <xsd:enumeration value="text"/>
                    <xsd:enumeration value="int"/>
                    <xsd:enumeration value="date"/>
                    <xsd:enumeration value="boolean"/> 
                </xs:restriction>
            </xsd:simpleType>

            <xsd:attribute name="visibility" type="visibility" default="show"></xsd:attribute>

            <xsd:attribute name="type" type="type" default="text"></xsd:attribute>

            <xsd:attribute name="name" type="xsd:string" ></xsd:attribute>

            <xsd:attribute name="label" type="xsd:string" ></xsd:attribute>

            <xsd:attribute name="required" type="xsd:boolean" default="true"></xsd:attribute>

            <xsd:attribute name="persist" type="xsd:boolean" default="false"></xsd:attribute>

    </xs:complexType>

</xsd:schema>
